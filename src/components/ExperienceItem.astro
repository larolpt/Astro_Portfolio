---
interface Props{
    place: string
    time: string
    desc: string
}

const { place, time, desc } = Astro.props
---
<div class="flex flex-col sm:relative sm:before:absolute sm:before:top-2 sm:before:w-4 sm:before:h-4 sm:before:rounded-full sm:before:left-[-35px] sm:before:z-[1] before:dark:bg-violet-400">
    <h3 class="text-xl font-semibold tracki">{place}</h3>
    <time class="text-xs tracki uppercase dark:text-gray-400">{time}</time>
    <p class="mt-3 text-pretty">{desc}</p>
</div>